import java.util.Scanner;
public class A_Watermelon{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        int a = sc.nextInt();
        if(a>2){
        if(a%2==0){
            System.out.println("YES");
        }
        else{
            System.out.println("NO");
        }}
        else{
            System.out.println("NO");
        }
        sc.close();

    }
}

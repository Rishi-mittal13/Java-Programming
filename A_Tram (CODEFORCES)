//problem :- 116A (codeforces)

import java.util.Scanner;
public class A_Tram{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        int count  = 0;
        int max = 0 ; 
        int n = sc.nextInt();
        for(int i  = 0 ; i<n ; i++){
            int a = sc.nextInt();
            int b = sc.nextInt();
            count = count-a;
            count = count+b;
            if(count > max){
                max = count;
            } 
        }
        System.out.println(max);
        sc.close();
    }
}

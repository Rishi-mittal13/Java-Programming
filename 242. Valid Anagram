//problem -  242 
//time-complexity - o(n).
//space-complexity --> o(n).



class Solution {
    public boolean isAnagram(String s, String t) {
        int[] arr = new int[26];
        int sum = 0 ;
        for(int i = 0 ; i<s.length() ; i++){
            arr[(int)s.charAt(i)-97]++ ;
            sum++;}
        for(int j = 0 ; j<t.length() ; j++){
            int n = (int)t.charAt(j)-97;
            if(arr[n]==0) return false;
            if(arr[n]>0){
                arr[n]--;
                sum--;
            }
        }
        if(sum==0) return true;
        return false;
    }
}

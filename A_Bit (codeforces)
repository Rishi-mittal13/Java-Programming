// 282A - codeforces

import java.util.Scanner;
public class A_Bit{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int x = 0;
        for(int i =0 ; i<n ; i++){
            String s = sc.next();
            if((s.equals("++X")) || (s.equals("X++"))){
                x+=1;
            }
            else{
                x-=1;
            }
        }
        System.out.println(x);
        sc.close();


    }
}
